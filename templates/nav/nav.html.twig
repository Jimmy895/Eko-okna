<div class="m-0 p-0 fixed-top" style="width: 10%">
    <div class="m-0 p-0">
        <div class="col-sm-auto bg-light sticky-top p-0 min-vh-100 shadow d-flex flex-column bg-light align-items-center justify-content-between">
            <div class="d-flex flex-column bg-light align-items-center justify-content-center">
                <ul class="nav nav-pills nav-flush flex-column mx-auto text-center align-items-center">
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item flex-column w-100 py-2">
                        <a href="{{ path('create_storage') }}" class="nav-link text-dark" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="create-storage">
                            <i class="fa-solid fa-warehouse h4"></i><p class="m-0">Stwórz magazyn</p>
                        </a>
                    </li>
                    <li class="nav-item flex-column w-100 py-2">
                        <a href="{{ path('storage_list') }}" class="nav-link text-dark" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="storages-list">
