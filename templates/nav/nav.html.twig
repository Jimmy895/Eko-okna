                    <li class="nav-item flex-column w-100 py-2">
                        <a href="{{ path('entry_article') }}" class="nav-link text-dark" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="entry-article">
                            <i class="fa-solid fa-cart-plus h4 m-0"></i><p class="m-0">Przyjmij artykuł</p>
                        </a>
                    </li>
                    <li class="nav-item flex-column w-100 py-2">
                        <a href="{{ path('release_article') }}" class="nav-link text-dark" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="release-article">
                            <i class="fa-solid fa-cart-shopping h4 m-0"></i><p class="m-0">Wydaj artykuł</p>
                        </a>
                    </li>

                </ul>
            </div>
            <div class="d-flex flex-column bg-light align-items-center justify-content-center w-100">
                <ul class="nav nav-pills nav-flush flex-column mx-auto text-center align-items-center w-100">
                    <li class="li-without-hover"><i class="fa-solid fa-user pb-3"></i>{% if app.user %} {{ app.user.userIdentifier }} {% endif %}</li>
                    <li class="nav-item flex-column w-100">
                        <a href="{{ path('app_logout') }}" class="logout w-100 nav-link text-dark" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="create-storage">
                            <i class="fa-solid fa-arrow-right-from-bracket"></i><p>Wyloguj</p>
