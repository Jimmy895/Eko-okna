{% extends 'base.html.twig' %}

{% block title %}Create new storage{% endblock %}

{% block body %}


    <div class="container-fluid w-100 d-flex flex-column m-0 px-0">
        {% include 'nav/nav.html.twig' %}

        <div class="m-0 px-0 min-vh-100 d-flex flex-column align-items-center gap-5 py-5 px-5" style="width: 90%;">
            <h1 class="w-75">Lista użytkowników:</h1>
            {% for user in users %}
                <div class="w-75 py-5 shadow rounded-3 bg-light d-flex flex-column px-5">
                    <div class="d-flex w-100 justify-content-between">
                        <h3>{{ user.login }}
                            {% if user.roles == '["ROLE_ADMIN"]' %}
                                (Administrator)
                                {% else %}
                                (Użytkownik)
                            {% endif %}
                        </h3>
                        <a href="{{ path('edit_user', { id: user.id }) }}"><button class="btn-edit btn btn-lg btn-outline-primary">Edytuj</button></a>
                    </div>
                    <p>Miejsce pracy:
                        {{ user.name }}
                    </p>

                    <p class="m-0 p-0">Uprawnienia systemowe:
                        {% if user.roles == '["ROLE_ADMIN"]' %}
                            Bez ograniczeń
                        {% else %}
                            Przyjmowanie / wydawanie towaru
                        {% endif %}
                    </p>
                </div>
            {% endfor %}
        </div>

    </div>



{% endblock %}